<svg class="background">
  <svg id="clock" display="inline">
    <text id="dateLabel" />
    <image id="batteryLevelImage" x="80%" y="2%" width="50" height="20" href="icons/battery/battery.png" load="sync"/>
    <rect id="batteryLevelRect" x="281" y="8" width="39" height="14" fill="white" />
    <text id="batteryLevelLabel" />
    <circle id = "seperatorEndLeft"cx="5%" cy="15%" />
    <line id = "seperatorLine" x1="5%" y1="15%" x2="95%" y2="15%"/>
    <circle id = "seperatorEndRight"cx="95%" cy="15%" />
    <text id="clockLabel" />
    <image x="30%" y="49%" width="18" height="18" href="icons/21/heart.png" load="sync"/>
    <text id="hrLabel" class="data" y="56%"/>
    <image x="30%" y="61%" width="18" height="18" href="icons/21/steps.png" load="sync"/>
    <text id="stepsLabel" class="data" y="68%"/>
  </svg>
  <svg id="period" display="none">
    <text id="periodLabel" />
    <text id="timeRemainingLabel" />
  </svg>
  <svg id="weather" display="inline">
    <image id="weatherImage" x="10" y="73%" width="60" height="60" href="" load="sync"/>
    <use id="tempAndConditionLabel" href='#marquee-text' value="50" font-size='28' font-family="Colfax-Bold" 
          width='70%' height='16%' x="75" y ="72%" fill='white'>
       <set href='group/text' attributeName='text-buffer' />
    </use>
    <use id="weatherLocationLabel" href='#marquee-text' value="50" font-size='28' font-family="Colfax-Regular" 
          width='70%' height='15%' x="75" y ="85%" fill='white'>
       <set href='group/text' attributeName='text-buffer' />
    </use>
  </svg>
  <svg id="stats" display="none">
    <image id="stepsStatsImage" x="0" y="4%" width="21" height="21" href="icons/21/steps.png" load="sync"/>
    <text id="stepStatsLabel" class="stats" y="12%"/>
    <image x="0" y="24%" width="21" height="21" href="icons/21/distance.png" load="sync"/>
    <text id="distStatsLabel" class="stats" y="32%"/>
    <image x="0" y="44%" width="21" height="21" href="icons/21/stairs.png" load="sync"/>
