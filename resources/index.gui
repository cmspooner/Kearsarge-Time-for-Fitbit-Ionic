    <text id="activeStatsLabel" class="stats" y="72%"/>
    <image x="0" y="84%" width="21" height="21" href="icons/21/calories.png" load="sync"/>
    <text id="calsStatsLabel" class="stats" y="92%"/>
  </svg>
  <svg id="schedule" display="none">
    <text id="period0StartLabel" class="periodStart" y="8%"/>
    <text id="period0NameLabel" class="periodName" y="8%"/>
    <text id="period0EndLabel" class="periodEnd" y="8%"/>
    <text id="period1StartLabel" class="periodStart" y="18%"/>
